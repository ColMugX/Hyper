{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016",
      "es2017.object"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true
  },
  "include": [
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}
